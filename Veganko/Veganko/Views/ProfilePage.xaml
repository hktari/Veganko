<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage
    x:Class="Veganko.Views.ProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:circleImageControl="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
    xmlns:converters="clr-namespace:Veganko.Converters"
    xmlns:views="clr-namespace:Veganko.Views"
    xmlns:vm="clr-namespace:Veganko.ViewModels">
    <ContentPage.BindingContext>
        <vm:ProfileViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Thickness x:Key="ViewPadding">
                <x:Arguments>
                    <x:Double>10</x:Double>
                </x:Arguments>
            </Thickness>
            <converters:IntToStarConverter x:Key="intToStarConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="250" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <AbsoluteLayout BackgroundColor="LightGray">
                <Image
                    AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                    AbsoluteLayout.LayoutFlags="All"
                    Aspect="AspectFill"
                    Source="{Binding BackgroundImage}" />
                <ImageButton
                    AbsoluteLayout.LayoutBounds="1, 0, 25, 25"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    BorderColor="Black"
                    Clicked="OnBackgroundImageTap"
                    Source="edit.png" />
                <StackLayout
                    AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.45, 1.0"
                    AbsoluteLayout.LayoutFlags="All"
                    Spacing="0">
                    <StackLayout VerticalOptions="CenterAndExpand">
                        <Grid HeightRequest="112" WidthRequest="112">
                            <Image Aspect="AspectFit" Source="{Binding AvatarImage}" />
                            <ImageButton
                                Clicked="OnEditAvatarTap"
                                HeightRequest="25"
                                HorizontalOptions="End"
                                VerticalOptions="Start"
                                WidthRequest="25"
                                Source="edit.png" />
                        </Grid>
                        <Label
                            FontAttributes="Bold"
                            FontSize="25"
                            HorizontalTextAlignment="Center"
                            Text="{Binding User.Username}"
                            TextColor="White" />
                        <Label
                            Margin="0,5.0,0,0"
                            FontSize="16"
                            HorizontalTextAlignment="Center"
                            Text="{Binding UserDescription}"
                            TextColor="White" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            HorizontalTextAlignment="Center"
                            Text="{Binding UserLabel}"
                            TextColor="White" />
                    </StackLayout>
                </StackLayout>
            </AbsoluteLayout>
            <Button
                Grid.Row="1"
                Margin="{StaticResource ViewPadding}"
                Clicked="OnLogoutClicked"
                HorizontalOptions="End"
                Text="Logout"
                VerticalOptions="Start" />
            <Button
                Grid.Row="1"
                Margin="{StaticResource ViewPadding}"
                Clicked="OnSaveClicked"
                HorizontalOptions="Start"
                IsVisible="{Binding IsDirty}"
                Text="Shrani spremembe"
                VerticalOptions="Start" />
            <ImageButton
                Grid.Row="1"
                Margin="{StaticResource ViewPadding}"
                Command="{Binding HelpCommand}"
                HeightRequest="38"
                HorizontalOptions="End"
                VerticalOptions="End"
                WidthRequest="38"
                Source="ico_help.png" />
        </Grid>
    </ContentPage.Content>
</views:BaseContentPage>