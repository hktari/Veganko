<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage
    x:Class="Veganko.Views.ProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:circleImageControl="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions"
    xmlns:converters="clr-namespace:Veganko.Converters"
    xmlns:views="clr-namespace:Veganko.Views"
    xmlns:vm="clr-namespace:Veganko.ViewModels">
    <ContentPage.BindingContext>
        <vm:ProfileViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:IntToStarConverter x:Key="intToStarConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ListView
            CachingStrategy="RecycleElement"
            HasUnevenRows="True"
            IsPullToRefreshEnabled="true"
            IsRefreshing="{Binding IsBusy, Mode=OneWay}"
            ItemsSource="{Binding Comments}"
            RefreshCommand="{Binding LoadItemsCommand}"
            VerticalOptions="FillAndExpand">
            <ListView.Header>
                <AbsoluteLayout
                    BackgroundColor="LightGray"
                    HeightRequest="250"
                    VerticalOptions="Fill">
                    <Image
                        AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                        AbsoluteLayout.LayoutFlags="All"
                        Aspect="AspectFill"
                        Source="{Binding BackgroundImage}" />
                    <ImageButton
                        AbsoluteLayout.LayoutBounds="1, 0, 25, 25"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        BorderColor="Black"
                        Clicked="OnBackgroundImageTap"
                        Source="edit.png" />
                    <StackLayout
                        AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.45, 1.0"
                        AbsoluteLayout.LayoutFlags="All"
                        Spacing="0">
                        <StackLayout VerticalOptions="CenterAndExpand">
                            <Grid HeightRequest="112" WidthRequest="112">
                                <Image Aspect="AspectFit" Source="{Binding AvatarImage}" />
                                <ImageButton
                                    Clicked="OnEditAvatarTap"
                                    HeightRequest="25"
                                    HorizontalOptions="End"
                                    Source="edit.png"
                                    VerticalOptions="Start"
                                    WidthRequest="25" />
                            </Grid>
                            <Label
                                FontAttributes="Bold"
                                FontSize="25"
                                HorizontalTextAlignment="Center"
                                Text="{Binding User.Username}"
                                TextColor="White" />
                            <Label
                                Margin="0,5.0,0,0"
                                FontSize="16"
                                HorizontalTextAlignment="Center"
                                Text="{Binding UserDescription}"
                                TextColor="White" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalTextAlignment="Center"
                                Text="{Binding UserLabel}"
                                TextColor="White" />
                        </StackLayout>
                    </StackLayout>
                </AbsoluteLayout>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid
                            Padding="10"
                            ColumnSpacing="10"
                            RowSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.RowSpan="3"
                                HorizontalOptions="Center"
                                Source="{Binding Product.Image}"
                                VerticalOptions="Center" />
                            <Label
                                Grid.Column="1"
                                Text="{Binding Product.Name}"
                                VerticalOptions="EndAndExpand" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding Comment.Rating, Converter={StaticResource intToStarConverter}}"
                                VerticalOptions="Start" />
                            <Label
                                Grid.Row="2"
                                Grid.Column="1"
                                Text="{Binding Comment.Text}"
                                VerticalOptions="Start" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Footer>
                <Grid>
                    <Button
                        Clicked="OnLogoutClicked"
                        HorizontalOptions="End"
                        Text="Logout" />
                    <Button
                        IsVisible="{Binding IsDirty}"
                        Clicked="OnSaveClicked"
                        HorizontalOptions="Start"
                        Text="Save changes" />
                </Grid>
            </ListView.Footer>
        </ListView>
    </ContentPage.Content>
</views:BaseContentPage>