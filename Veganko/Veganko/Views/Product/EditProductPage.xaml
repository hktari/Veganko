<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Veganko.Views.Product.EditProductPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:partial="clr-namespace:Veganko.Views.Product.Partial"
    ControlTemplate="{StaticResource LodingIndicatorTemplate}"
    NavigationPage.HasNavigationBar="True">
    <NavigationPage.TitleView>
        <Grid Padding="10,5" VerticalOptions="Center">
            <Button
                BackgroundColor="{StaticResource Primary}"
                Command="{Binding CancelCommand}"
                HorizontalOptions="Start"
                Style="{StaticResource NeutralBtn}"
                Text="PREKLIČI"
                TextColor="Black" />
            <Button
                Grid.Column="1"
                BackgroundColor="{StaticResource Primary}"
                Command="{Binding SaveCommand}"
                HorizontalOptions="End"
                Style="{StaticResource PositiveBtn}"
                Text="SHRANI"
                TextColor="White" />
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ScrollView>
            <partial:EditProductView Margin="10" />
        </ScrollView>
    </ContentPage.Content>
</ContentPage>