<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="Veganko.Views.Partials.EditAccountTemplate"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BindingContext="{TemplateBinding BindingContext}"
    ControlTemplate="{StaticResource LodingIndicatorTemplate}"
    mc:Ignorable="d">
    <ContentView.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="Black" />
        </Style>
    </ContentView.Resources>
    <ContentView.Content>
        <Grid BackgroundColor="#e1edd1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="2.3*" />
                <ColumnDefinition Width="85.4*" />
                <ColumnDefinition Width="7.3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="13*" />
                <RowDefinition Height="5.5*" />
                <RowDefinition Height="60*" />
                <RowDefinition Height="5.5*" />
                <RowDefinition Height="13*" />
            </Grid.RowDefinitions>
            <Image
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                HorizontalOptions="End"
                VerticalOptions="End"
                WidthRequest="155"
                Source="login_leaf1.png" />

            <Image
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                HorizontalOptions="Start"
                VerticalOptions="End"
                WidthRequest="155"
                Source="login_leaf2.png" />

            <Image
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                HorizontalOptions="Start"
                Rotation="180"
                VerticalOptions="Start"
                WidthRequest="155"
                Source="login_leaf1.png" />

            <Image
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                HorizontalOptions="End"
                Rotation="165"
                VerticalOptions="Start"
                WidthRequest="155"
                Source="login_leaf2.png" />
            <Frame
                Grid.Row="1"
                Grid.RowSpan="3"
                Grid.Column="2"
                Padding="3"
                IsClippedToBounds="True"
                Style="{StaticResource EntryFrameStyle}">
                <Grid IsClippedToBounds="True" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <ScrollView Padding="30,10">
                        <ContentPresenter IsClippedToBounds="True" />
                    </ScrollView>
                    <BoxView Grid.Row="1" Color="Black" />
                    <Button
                        Grid.Row="2"
                        BackgroundColor="White"
                        Command="{Binding SubmitCommand}"
                        FontFamily="{StaticResource VarelaRoundFont}"
                        FontSize="24"
                        Text="{Binding SubmitBtnText}"
                        TextColor="Black" />
                </Grid>
            </Frame>
        </Grid>
    </ContentView.Content>
</ContentView>