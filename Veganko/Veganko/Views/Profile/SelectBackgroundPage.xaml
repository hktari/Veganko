<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Veganko.Views.Profile.SelectBackgroundPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="OnSaveClicked" Text="Save" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="0">
            <ScrollView>
                <StackLayout
                    BindableLayout.ItemsSource="{Binding BackgroundImages}"
                    Spacing="0"
                    VerticalOptions="FillAndExpand">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <ImageButton
                                Aspect="Fill"
                                Clicked="OnImageClicked"
                                HeightRequest="250"
                                Opacity="0.5"
                                Source="{Binding Image}">
                                <ImageButton.Triggers>
                                    <DataTrigger
                                        Binding="{Binding IsSelected}"
                                        TargetType="ImageButton"
                                        Value="True">
                                        <Setter Property="Opacity" Value="1.0" />
                                    </DataTrigger>
                                </ImageButton.Triggers>
                            </ImageButton>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </ScrollView>
            <Button
                Clicked="OnSaveClicked"
                Style="{StaticResource PositiveBtn}"
                Text="Save" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>