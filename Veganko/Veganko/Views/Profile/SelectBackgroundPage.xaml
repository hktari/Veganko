<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Veganko.Views.Profile.SelectBackgroundPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="OnSaveClicked" Text="Save" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ListView
            ItemsSource="{Binding BackgroundImageSource}"
            RowHeight="250"
            SelectedItem="{Binding Selected, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Image Aspect="Fill" Source="{Binding Image}" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Footer>
                <Button
                    Clicked="OnSaveClicked"
                    HorizontalOptions="Center"
                    Text="Save" />
            </ListView.Footer>
        </ListView>
    </ContentPage.Content>
</ContentPage>